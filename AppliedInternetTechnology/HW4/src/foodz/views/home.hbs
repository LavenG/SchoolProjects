
<form method="GET" action="" class="filter">
  <input type="radio" name="filterCategory" value="breakfast"> Breakfast
  <input type="radio" name="filterCategory" value="lunch"> Lunch
  <input type="radio" name="filterCategory" value="dinner"> Dinner
  <input type="radio" name="filterCategory" value="anytime"> Anytime
  <input type="submit" value="Filter Meals">
</form>
<hr>
<h1> Recommended Meals {{str}}</h1>
<ul class="meals">
{{#each availableMeals}}
  <li class="singleMeal"><span class="header">{{name}} ({{filterCategory}})</span> <br> {{description}}</li>
{{/each}}
</ul>

<form method="POST" action"">
  <hr>
  <h1> Add a Meal Recommendation: </h1>
  <p class="mealAdder">
    Name: <input name="name" type="text"> <br>
    Description: <input name="description" type="text"> <br><br>

  <input type="radio" name="filterCategory" value="breakfast"> Breakfast
  <input type="radio" name="filterCategory" value="lunch"> Lunch <br>
  <input type="radio" name="filterCategory" value="dinner"> Dinner
  <input type="radio" name="filterCategory" value="anytime"> Anytime <br>
  <input type="submit" value="Add Meal">
  </p>

</form>
